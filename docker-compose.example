version: '3.7'

services:
  php:
    # image: tardis.php
    build:
      context: ./
      dockerfile: php.dockerfile
    container_name: spacehunt-php
    restart: unless-stopped
    tty: true
    ports:
      - "9000:9000"
    env_file:
      - .env
    working_dir: /var/www
    volumes:
      - ./../:/var/www
      - ./php/local.ini:/usr/local/etc/php/conf.d/local.ini
    networks:
      - spacehunt-network

  nginx:
    # image: nginx:stable-alpine
    build:
      context: ./
      dockerfile: nginx.dockerfile
    container_name: spacehunt-nginx
    restart: unless-stopped
    tty: true
    ports:
      - "8181:80"
    env_file:
      - .env
    working_dir: /var/www
    volumes:
      - ./../:/var/www
      - ./nginx/vhost.conf:/etc/nginx/conf.d/default.conf
    depends_on: #Start services in that order before this service
      - php
      - mysql
    networks:
      - spacehunt-network

  mysql:
    # image: mysql:5.7.22
    build:
      context: ./
      dockerfile: mariadb.dockerfile
    container_name: spacehunt-mariadb
    restart: unless-stopped
    tty: true
    volumes:
      - dbdata:/var/lib/mysql
      # - ./mariadb/my.cnf:/etc/mysql/my.cnf #custom config
    ports:
      - "33061:3306"
    env_file:
      - .env
    networks:
      - spacehunt-network

networks:
  spacehunt-network:
    driver: bridge
volumes:
  dbdata:
    driver: local
